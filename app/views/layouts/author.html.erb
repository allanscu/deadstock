<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:page_title) %> | DS</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
	<script src="https://cloud.tinymce.com/stable/tinymce.min.js?apiKey=fs9pqlyzmux7vdwww5iwh6co2vyiwts684qaomk4a9mkkgsr"></script>
  </head>

  <body>
	  <%= render 'layouts/navbar' %>
	  <div class="container <%= controller_name %> <%= action_name %>">
		  <% if flash.any? %>
		  	<% flash.keys.each do |key| %>
		  		<div class="alert alert-<%= key.to_s %>" alert-dismissible fade show role="alert">
		  			<button type="button" class="close" data-dismiss="alert" aria-label="Close">
		  				<span aria-hidden="true">&times;</span>
		  			</button>
		  			<%= flash[key] %>
		  		</div>
		  	<% end %>
		  <% end %>
		  
		  <%= yield %>
	  </div>
  </body>
</html>