<p id="notice"><%= notice %></p>

<h1>Releases</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Release date</th>
      <th>Name</th>
      <th>Description</th>
      <th>Style</th>
      <th>Abv</th>
      <th>Case vol</th>
      <th>Can limit</th>
      <th>Price</th>
      <th>Additional</th>
      <th>Canning date</th>
      <th>Canning phrase</th>
      <th>Label inspiration</th>
      <th>Instagram url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @releases.each do |release| %>
      <tr>
        <td><%= release.number %></td>
        <td><%= release.release_date %></td>
        <td><%= release.name %></td>
        <td><%= release.description %></td>
        <td><%= release.style %></td>
        <td><%= release.abv %></td>
        <td><%= release.case_vol %></td>
        <td><%= release.can_limit %></td>
        <td><%= release.price %></td>
        <td><%= release.additional %></td>
        <td><%= release.canning_date %></td>
        <td><%= release.canning_phrase %></td>
        <td><%= release.label_inspiration %></td>
        <td><%= release.instagram_url %></td>
        <td><%= link_to 'Show', release %></td>
        <td><%= link_to 'Edit', edit_release_path(release) %></td>
        <td><%= link_to 'Destroy', release, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Release', new_release_path %>
